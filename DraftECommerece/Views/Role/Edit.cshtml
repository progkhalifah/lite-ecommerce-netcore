@{
    ViewData["Title"] = "Create";
}


<br />

<h2 class="text-info">Edit Role</h2>
<form asp-action="Edit" method="post" id="role-form" enctype="multipart/form-data">

    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3 class="text-danger">@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.name" class="form-control" />
            </div>

        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var roleExist = '@TempData["RoleExist"]'
            if (roleExist != '') {
                alertify.error(roleExist);
            }
        })
    </script>
}