@{
    ViewData["Title"] = "Create";
}


<br />

<h2 class="text-info">Delete Role</h2>
<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">

    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3 class="text-danger">@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" name="name" readonly="readonly" value="@ViewBag.name" class="form-control" />
            </div>
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
