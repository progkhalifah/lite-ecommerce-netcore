@using DraftECommerece.Models;
@model List<tbl_Foundation_Products>
@{
    ViewData["Title"] = "Home Page";
}


<br /><br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: steelblue;">@product.NameProduct</label>
                    </h4>
                </div>
                <img src="/@product.ImageProduct" alt="Card Image" class="card-img-top" style="height:300px;"/>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color: #a51313"><b>Price : @product.PriceProduct</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn pull-right btn-outline-info">Detalis View</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>






