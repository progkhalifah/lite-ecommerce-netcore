@model IEnumerable<DraftECommerece.Models.tbl_Foundation_Products>

@{
    ViewData["Title"] = "Index";
}
<link href="~/lib/datatables/css/jquery.datatables.css" rel="stylesheet" />
<link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add New Product</a>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" placeholder="Low Amount" class="form-control" name="lowAmount"/>
        </div>
        <div class="col-3">
            <input type="number" placeholder="large Amount" class="form-control" name="largeAmount"/>
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-outline-primary"/>
        </div>
    </div>
</form>
<br/>
<div>
    <table id="myTable" class="table table-striped border" >
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c=>c.NameProduct)
                </th>
                <th>
                    @Html.DisplayNameFor(c=>c.PriceProduct)
                </th>
                <th>
                    @Html.DisplayNameFor(c=>c.ProductColor)
                </th>
                <th>
                    @Html.DisplayNameFor(c=>c.IsAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(c=>c.ProductTypeId)
                </th>

                <th></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameProduct</td>
                    <td>@item.PriceProduct</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td style="width: 150px;">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-controller="Product" class="btn btn-primary mr-1" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-controller="Product" class="btn btn-success mr-1" asp-route-id="@item.Id"><i class="fas fa-list"></i></a>
                            <a asp-action="Delete" asp-controller="Product" class="btn btn-danger mr-1" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
</div>


@section scripts{
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        })        
    </script>
}